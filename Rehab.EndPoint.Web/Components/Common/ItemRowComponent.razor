<div class="row align-items-stretch mb-3  py-3 row-container">
    <div class="col-md-1 d-flex justify-content-center align-items-center ">
        @if (!string.IsNullOrEmpty(Image))
        {
            <div class="image-wrapper">
                <img src="@Image" alt="@Title" />
            </div>
        }
        else
        {
            <div class="image-wrapper d-flex justify-content-center align-items-center">
                <i class="@(IconClass ?? "fas fa-shield-alt") fa-2x"></i>
            </div>
        }
    </div>
    <div class="col-md-11 d-flex flex-column justify-content-center">
        <h3>@Title</h3>
       
        @if(!string.IsNullOrEmpty(Description)){
        <p>
                @Description
        </p>
        }
       
    </div>
</div>


@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public string Image { get; set; } = string.Empty;
    [Parameter]
    public string Description { get; set; } = string.Empty;
    [Parameter]
    public string CardLink { get; set; } = string.Empty;
    [Parameter]
    public string IconClass { get; set; } = "fa-regular fa-image";
}
<style>
    .row-container {
        background-color: #ddf2fd;
        border-radius: 8px;
    }
    .image-wrapper {
        width: 75px;  
        height: 75px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        border-radius: 8px;  
         
    }

        .image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;  
        }
</style>