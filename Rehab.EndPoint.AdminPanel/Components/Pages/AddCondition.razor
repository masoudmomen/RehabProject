@page "/condition/add"
@using Rehab.Application.Conditions
@using Rehab.EndPoint.AdminPanel.Viewmodels
@inject Rehab.Application.Conditions.IConditionService ConditionService
@inject AutoMapper.IMapper mapper
@rendermode InteractiveServer
@inject AlertService AlertService
@inject IWebHostEnvironment Env
@inject IImageUploaderService Uploader

<div class="w-75 mx-auto p-4">
    <h3>Add Condition</h3>

    <EditForm Model="Condition" OnValidSubmit="Add" class="form-control" FormName="AddConditionForm">
        <DataAnnotationsValidator></DataAnnotationsValidator>
        <ValidationSummary class="text-danger" />
        <label>Name</label>
        <InputText @bind-Value="Condition.Name" class="form-control my-2"></InputText>
        <label>Icon</label>
        <InputFile OnChange="HandleSelected" class="form-control my-2" accept="image/*" />
        <label>Description</label>
        <InputTextArea @bind-Value="Condition.Description" class="form-control my-2"></InputTextArea>
        @if (isAddBtnActive)
        {
            <button class="btn btn-primary my-2">Add</button>
        }
        else
        {
            <button class="btn btn-outline-danger my-2" disabled>Add</button>
        }
    </EditForm>
</div>


@code {
    public ConditionViewmodel Condition { get; set; } = new();
    public ResultViewmodel<ConditionViewmodel> Result { get; set; } = new();
    private bool isAddBtnActive = true;

    private async Task Add()
    {
        if (Condition is not null)
        {
            if (UploadedPaths.Count > 0)
            {
                Condition.Logo = UploadedPaths[0];
            }
            else
            {
                Condition.Logo = "";
            }

            var conditionDto = mapper.Map<ConditionDto>(Condition);
            BaseDto<ConditionDto> result = ConditionService.Add(conditionDto);
            Result = mapper.Map<ResultViewmodel<ConditionViewmodel>>(result);
            if (Result.Success)
            {
                Condition = new();
                UploadedPaths.Clear();
            }
            await AlertService.ShowAsync(Result.Message, Result.Status);
        }
    }

    List<string> UploadedPaths = new();

    private async Task HandleSelected(InputFileChangeEventArgs e)
    {
        isAddBtnActive = false;
        StateHasChanged();
        var files = e.GetMultipleFiles();
        var paths = await Uploader.UploadAsync(files, Env.WebRootPath, "uploads/conditions");
        UploadedPaths.Clear();
        UploadedPaths.AddRange(paths);
        if (UploadedPaths.Count > 0)
        {
            isAddBtnActive = true;
        }
    }
}
