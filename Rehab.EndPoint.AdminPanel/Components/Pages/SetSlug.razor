@page "/setslug"
@using Rehab.Application.Facilities
@inject IFacilityService FacilityService
<h3>SetSlug</h3>
@if(result != null)
{
    foreach (var item in result)
    {
        <div class="row">
            <div class="col-6 text-start"><span>@item.FacilityName</span></div>
            <div class="col-6 text-start"><span>@item.FacilitySlug</span></div>
        </div>
    }
}

@code {
    public List<FacilityNameSlugDto> result { get; set; } = new();
    protected override void OnInitialized()
    {
        base.OnInitialized();
        result = FacilityService.SetSlug();
    }
}
